<div class="big-padding blue-grey text-center white-text">
	<h1>Listado de pacientes</h1>
</div>
<div class="container text-center">
	<table class="table table-bordered white">
		<thead>
			<tr>
				<th>Codigo</th>
				<th>Nombres</th>
				<th>Apellidos</th>
				<th>Edad</th>
				<th>Sexo</th>
				<th>Estado</th>
				<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
			<% @patients.each do |patient|%>
				<tr>
					<td><%= patient.code %></td>
					<td><%= patient.first_name %></td>
					<td><%= patient.last_name %></td>
					<td><%= patient.age %></td>
					<td><%= patient.sex %></td>
					<td><%= patient.status %></td>
					<td>
						<%= link_to 'editar', edit_patient_path(patient), class: 'text-info' %>
						<%= link_to 'mostrar', patient, class: 'text-inverse' %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
<div class="floating">
	<%= button_to new_patient_path, method: :get, class: 'btn btn-info btn-fab' do%>
		<i class="material-icons">add</i>
	<%end%>
</div>

